<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".Savings">

    <TextView
        android:id="@+id/saving"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:text="Your Savings"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:layout_gravity="top" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="_____________________________________________"
        android:textColor="@color/white" />

    <ImageView
        android:layout_width="411dp"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/pig" />
    <TextView
        android:id="@+id/amount1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="50dp"
        android:text="1,00,34,456"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="30dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="60dp"
        android:text="_____________________________________________"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:text="Remember,the bank will never request your personal information, account details, or passwords through unsolicited emails, calls, or messages. Stay vigilant and avoid sharing sensitive information with anyone claiming to represent the bank unless you initiated the contact."
        android:textColor="@color/white"
        android:textSize="10sp" />


</LinearLayout>