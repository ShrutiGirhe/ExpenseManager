<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Rating">
    <TextView
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:text="RATING"
        android:textSize="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/rating"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="45dp"/>
    <TextView
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="190dp"
        android:text="HOW WAS YOUR EXPERIENCE USING OUR APP?"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/sentence"
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:layout_marginTop="340dp"
        android:textColor="@color/white"
        android:text="WOULD YOU LIKE TO SUGGEST SOMETHING?"
        android:textSize="20dp"
        android:layout_marginLeft="25dp"/>
    <ImageView
        android:layout_width="470dp"
        android:layout_height="500dp"
        android:src="@drawable/pai"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"/>
    <Button
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="25dp"
        android:text="YES"
        android:backgroundTint="@color/green"/>
    <Button
        android:id="@+id/no"
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="100dp"
        android:text="NO"
        android:backgroundTint="@color/green"/>
    <EditText
        android:id="@+id/rating_feedback"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:hint="."
        android:layout_below="@id/sentence"
        android:textColorHint="@color/grey"
        android:layout_marginLeft="25dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:backgroundTint="@color/green"
        android:layout_below="@id/rating_feedback"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>